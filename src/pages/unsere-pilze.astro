---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { getEntry } from "astro:content";

const title = "Unsere Pilze";
const description =
  "Entdecke unsere vielfältige Auswahl an frischen, nachhaltig angebauten Pilzen von den shroom-mates in Leipzig.";

// Get mushrooms from landing page content (same pattern as values)
const landingPageEntry = await getEntry("landing-page", "content");

if (!landingPageEntry) {
  throw new Error("Could not find landing-page content");
}

const mushrooms = landingPageEntry.data.mushrooms || [];
---

<Layout title={title} description={description}>
  <main>
    <h1>Unsere Pilze</h1>
    <div class="intro">
      <p>
        Entdecke unsere Auswahl an frischen, nachhaltig angebauten Pilzen. 
        Jede Sorte wird mit Sorgfalt kultiviert und zum perfekten Zeitpunkt geerntet.
      </p>
    </div>
    
    <div class="mushrooms-grid">
      {
        mushrooms.map((mushroom, index) => (
          <article class="mushroom-card">
            <div class="mushroom-image-wrapper">
              <Image
                src={mushroom.image}
                alt={mushroom.imageAlt}
                width={1920}
                height={1080}
                format="webp"
                loading="lazy"
                class="mushroom-image"
                priority={index === 0}
              />
            </div>
            <div class="mushroom-content">
              <h2>{mushroom.title}</h2>
              <p class="mushroom-description">{mushroom.description}</p>
            </div>
          </article>
        ))
      }
    </div>
    
    {mushrooms.length === 0 && (
      <div class="no-content">
        <p>Derzeit sind keine Pilzsorten verfügbar. Bitte schauen Sie später wieder vorbei.</p>
      </div>
    )}
  </main>
</Layout>

<style>
  main {
    padding: 0;
    min-height: 100vh;
    width: 100%;
    background: var(--bg-color);
  }

  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    text-align: center;
    margin: 0;
    padding: 3rem 2rem 2rem;
    color: var(--text-color);
    background: var(--bg-color);
  }

  .intro {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem 4rem;
    text-align: center;
    background: var(--bg-color);
  }

  .intro p {
    font-size: 1.2rem;
    line-height: 1.8;
    color: var(--text-color);
  }

  .mushrooms-grid {
    display: flex;
    flex-direction: column;
    gap: 0;
    width: 100%;
  }

  .mushroom-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: center;
    min-height: 60vh;
  }

  .mushroom-card:nth-child(even) .mushroom-image-wrapper {
    order: 2;
  }

  .mushroom-card:nth-child(even) .mushroom-content {
    order: 1;
  }

  .mushroom-image-wrapper {
    width: 100%;
    height: 100%;
    min-height: 60vh;
    overflow: hidden;
    position: relative;
  }

  .mushroom-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    min-height: 60vh;
  }

  .mushroom-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 3rem 4rem;
    background: var(--bg-color);
    height: 100%;
    justify-content: center;
  }

  .mushroom-content h2 {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 1rem 0;
    color: var(--text-color);
  }

  .mushroom-description {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
    margin: 0;
  }

  .no-content {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-color);
  }

  .no-content p {
    font-size: 1.2rem;
    opacity: 0.7;
  }

  /* Tablet breakpoint */
  @media (max-width: 968px) {
    .mushroom-content {
      padding: 2.5rem 3rem;
    }

    .mushroom-content h2 {
      font-size: 2rem;
    }

    .mushroom-description {
      font-size: 1rem;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
      margin: 2rem 0 1.5rem;
      padding: 0 1.5rem;
    }

    .intro {
      margin-bottom: 3rem;
      padding: 0 1.5rem;
    }

    .intro p {
      font-size: 1.1rem;
    }

    .mushroom-card {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .mushroom-card:nth-child(even) .mushroom-image-wrapper {
      order: 1;
    }

    .mushroom-card:nth-child(even) .mushroom-content {
      order: 2;
    }

    .mushroom-image-wrapper {
      min-height: 50vh;
    }

    .mushroom-image {
      min-height: 50vh;
    }

    .mushroom-content {
      padding: 2rem 1.5rem;
    }

    .mushroom-content h2 {
      font-size: 1.8rem;
    }

    .mushroom-description {
      font-size: 0.95rem;
      line-height: 1.6;
    }
  }

  /* Small mobile breakpoint */
  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
      margin: 1.5rem 0 1rem;
      padding: 0 1rem;
    }

    .intro {
      padding: 0 1rem;
    }

    .intro p {
      font-size: 1rem;
    }

    .mushroom-image-wrapper {
      min-height: 40vh;
    }

    .mushroom-image {
      min-height: 40vh;
    }

    .mushroom-content {
      padding: 1.5rem 1rem;
    }

    .mushroom-content h2 {
      font-size: 1.6rem;
    }

    .mushroom-description {
      font-size: 0.9rem;
    }
  }
</style>
