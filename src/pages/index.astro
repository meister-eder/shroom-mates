<style>
  .landing-main {
    max-width: 100vw;
    padding: 0;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .hero {
    width: 100%;
    min-height: calc(100vh - 60px);
    padding-bottom: 60px;
    background-size: 100% auto;
    background-position: bottom;
    background-repeat: no-repeat;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 6rem;
    position: relative;
    margin: 0;
  }

  .title-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    z-index: 2;
    margin-top: 6rem;
  }

  .construction-card {
    background: rgba(255, 255, 255, 0.95);
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #000;
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.8);
    max-width: 500px;
    width: 85%;
    margin: 0 1rem;
  }

  .construction-card h1 {
    font-size: 2.5rem;
    color: #000;
    border: none;
    padding: 0;
    margin-bottom: 1rem;
  }

  .notice {
    font-family: "DM Mono", monospace;
    font-size: 1.2rem;
    color: #000;
    margin: 1rem 0;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.5;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .description a {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
  }

  .description a:hover {
    opacity: 0.8;
  }

  .construction-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 400px;
    margin: 0 auto;
  }

  .construction-links a {
    padding: 0.8rem 1.5rem;
    font-family: "DM Mono", monospace;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    min-width: 200px;
    text-align: center;
  }

  .social-link {
    background: #000;
    color: #fff;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .social-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  }

  .contact-link {
    border: 2px solid #000;
    color: #000;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .contact-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .hero {
      padding-bottom: 0;
      background-size: 180% auto;
      background-position: right bottom;
      padding-top: 0;
      min-height: 100vh;
    }

    .construction-card {
      padding: 1rem;
      margin: 0 2rem;
    }

    .construction-card h1 {
      font-size: 1.5rem;
    }

    .construction-card p {
      font-size: 0.8rem;
    }

    .construction-links {
      gap: 0.75rem;
    }

    .construction-links a {
      min-width: 0;
      width: auto;
      padding: 0.8rem 1.2rem;
      font-size: 0.8rem;
    }
  }
</style>
