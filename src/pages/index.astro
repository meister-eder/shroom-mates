---
import Layout from "../layouts/Layout.astro";
import ShroomSection from "../components/ShroomSection.astro";
---

<Layout title="Welcome to shroom-mates">
  <main>
    <section class="hero">
      <div class="title-wrapper">
        <h1>MEET OUR<br /> SHROOM-MATES</h1>
        <p>Explore our unique mushrooms grown with care in Leipzig.</p>
      </div>
    </section>

    <section id="shrooms">
      <ShroomSection
        name="Der KrÃ¤uterseitling"
        description="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Ullam, voluptatem at. Minus, sunt odit aliquid, nobis voluptates veritatis maiores omnis quas delectus labore deleniti asperiores, aspernatur fugit. Iste, totam impedit."
      />

      <section id="about">
        <h2>About Us</h2>
        <p>We are passionate about growing high-quality mushrooms...</p>
      </section>

      <section id="contact">
        <h2>Contact Us</h2>
        <form>
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required />

          <label for="email">Email</label>
          <input type="email" id="email" name="email" required />

          <button type="submit">Send</button>
        </form>
      </section>
    </section>
  </main>

  <style>
    main {
      font-size: 20px;
      line-height: 1.6;
    }

    section {
      border-top: 1px solid black;
      border-bottom: 1px solid black;
    }

    .hero {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-image: url("hero_oyster.png");
      background-size: cover;
    }

    .title-wrapper {
      text-align: center;
    }

    h1 {
      font-size: 4rem;
      font-weight: 700;
      line-height: 1;
      color: #fefefe;
      text-align: center;
      margin-top: 0;
      border: 6px solid white;
      padding: 25px;
    }

    .title-wrapper > p {
      color: white;
    }
  </style>
</Layout>
