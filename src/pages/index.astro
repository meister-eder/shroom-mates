---
import Layout from '../layouts/Layout.astro';
import ShroomSection from "../components/ShroomSection.astro";
import TitleBox from "../components/TitleBox.astro";
import Divider from "../components/Divider.astro";
import TextBox from "../components/TextBox.astro";
import heroImage from "../assets/images/hero_oyster.png";
import { mushrooms } from "../data/mushrooms";

// Get the mushrooms we want to display
const displayMushrooms = [
  mushrooms.find(m => m.id === 'king-oyster'),
  mushrooms.find(m => m.id === 'white-pearl')
].filter(Boolean);

console.log('Display Mushrooms:', displayMushrooms);
---

<Layout title="Welcome to shroom-mates">
  <main>
    <section class="hero" style={`background-image: url(${heroImage.src})`}>
      <div class="title-wrapper">
        <h1>MEET OUR<br> SHROOM-MATES</h1>
        <p>Explore our unique mushrooms grown with care in Leipzig.</p>
        <div class="cta-buttons">
          <a href="/shroom-mates/shrooms" class="cta-button">View Our Mushrooms</a>
          <a href="/shroom-mates/contact" class="cta-button secondary">Contact Us</a>
        </div>
      </div>
    </section>

    <section class="overview">
      <h2>Welcome to shroom-mates</h2>
      <p>We are passionate about cultivating the finest mushrooms in Leipzig. Our carefully controlled growing environments ensure the highest quality produce for your table.</p>
      <div class="feature-grid">
        <div class="feature">
          <h3>Fresh & Local</h3>
          <p>All our mushrooms are grown locally in Leipzig</p>
        </div>
        <div class="feature">
          <h3>Sustainable</h3>
          <p>We use eco-friendly farming practices</p>
        </div>
        <div class="feature">
          <h3>Premium Quality</h3>
          <p>Carefully cultivated in controlled environments</p>
        </div>
      </div>
    </section>

    {displayMushrooms.map((mushroom, index) => (
      <>
        <ShroomSection
          title={mushroom.name}
          mushroom={mushroom}
        />
        {index < displayMushrooms.length - 1 && <Divider />}
      </>
    ))}
  </main>
</Layout>

<style>
  main {
    font-size: 20px;
    line-height: 1.6;
  }

  .hero {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-size: cover;
    background-position: center;
    position: relative;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 1;
  }

  .title-wrapper {
    text-align: center;
    padding: 2rem;
    position: relative;
    z-index: 2;
  }

  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    color: #fefefe;
    text-align: center;
    margin-top: 0;
    border: 6px solid white;
    padding: 25px;
  }

  .title-wrapper > p {
    color: #fff;
    font-size: 1.5rem;
    margin: 2rem 0;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2rem;
    background-color: #fdfdfd;
    color: #000;
    text-decoration: none;
    font-weight: bold;
    box-shadow: 6px 6px #000;
    transition: all 0.2s;
  }

  .cta-button.secondary {
    background-color: transparent;
    border: 2px solid #fdfdfd;
    color: #fdfdfd;
  }

  .cta-button:hover {
    transform: translate(2px, 2px);
    box-shadow: 4px 4px #000;
  }

  .overview {
    padding: 4rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .feature {
    padding: 2rem;
    background-color: #fdfdfd;
    box-shadow: 6px 6px #000;
  }

  .feature h3 {
    margin-bottom: 1rem;
  }
</style>
