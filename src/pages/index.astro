---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import heroImage from "../assets/images/shroom-mates-drawing.png";
import AboutUsSection from "../components/AboutUsSection.astro";
import ImageGallery from "../components/ImageGallery.astro";
import UpcomingDates from "../components/UpcomingDates.astro";
import CustomerDeliverySection from "../components/CustomerDeliverySection.astro";

const title = "Hi, wir sind die shroom-mates";
const description =
  "Hochwertige Austernpilze vom Egenberger Samstagsmarkt in Leipzig. Frisch kultiviert und nachhaltig angebaut von den shroom-mates. Kostproben gibt es auf dem Samstagsmarkt.";
---

<Layout title={title} description={description} isLandingPage={true}>
  <main class="landing-main">
    <section class="hero">
      <!-- Background image will be handled by CSS for better performance -->
      <Image
        src={heroImage}
        alt=""
        class="hero-background"
        loading="eager"
        priority
        width={1200}
        height={800}
        format="webp"
      />
      <div class="title-wrapper">
        <div class="hero-card">
          <h1>{title}</h1>
          <p class="hero-description">
            Hochwertige Austernpilze vom Egenberger Samstagsmarkt in Leipzig.
            Frisch kultiviert und nachhaltig angebaut von den shroom-mates.
          </p>
          <p class="hero-description">
            Kostproben gibt es auf dem <a
              href="https://samstagsmarkt.de/"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Egenberger Samstagsmarkt Website (öffnet in neuem Tab)"
              >Egenberger Samstagsmarkt</a
            >. Aktuelle Verkaufstermine werden auf Instagram bekanntgegeben.
          </p>
          <div class="hero-links">
            <a
              href="https://www.instagram.com/shroom_mates_le/"
              class="social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label="Folgt uns auf Instagram (öffnet in neuem Tab)"
            >
              Folgt uns auf Instagram
            </a>
            <a href="/contact" class="contact-link"> Kontakt </a>
          </div>
        </div>
      </div>
    </section>

    <!-- New sections -->
    <AboutUsSection />
    <ImageGallery />
    <UpcomingDates />
    <CustomerDeliverySection />
  </main>
</Layout>

<style>
  .landing-main {
    max-width: 100vw;
    padding: 0;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
    width: 100%;
    box-sizing: border-box;
  }

  /* Ensure sections flow properly */
  .landing-main > :global(section) {
    width: 100%;
    max-width: 100vw;
    box-sizing: border-box;
    overflow-x: hidden;
  }

  .hero {
    width: 100%;
    min-height: calc(100vh - 60px);
    padding-bottom: 60px;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding-top: 6rem;
    position: relative;
    margin: 0;
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100%;
    height: auto;
    aspect-ratio: 1200 / 800;
    z-index: 1;
    object-fit: cover;
    object-position: right bottom;
    /* Ensure dimensions are preserved to prevent layout shift */
    min-height: 400px;
  }

  .title-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    z-index: 2;
    margin-top: 6rem;
  }

  .hero-card {
    background: rgba(255, 255, 255, 0.95);
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #000;
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.8);
    max-width: 500px;
    width: 85%;
    margin: 0 1rem;
  }

  .hero-card h1 {
    font-size: 2.5rem;
    color: #000;
    border: none;
    padding: 0;
    margin-bottom: 1rem;
  }

  .hero-description {
    font-size: 1.1rem;
    line-height: 1.5;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .hero-description a {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
  }

  .hero-description a:hover {
    opacity: 0.8;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 400px;
    margin: 0 auto;
  }

  .hero-links a {
    padding: 0.8rem 1.5rem;
    font-family: "DM Mono", monospace;
    text-decoration: none;
    font-weight: 500;
    transition: all var(--duration, 0.2s) ease;
    min-width: 200px;
    text-align: center;
    display: inline-block;
  }

  .hero-links a:focus-visible {
    outline: 2px solid var(--focus-color, #5f5f5f);
    outline-offset: 2px;
  }

  .social-link {
    background: #000;
    color: #fff;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .social-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  }

  .contact-link {
    border: 2px solid #000;
    color: #000;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .contact-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    .hero {
      padding-bottom: 0;
      padding-top: 0;
      min-height: 100vh;
    }

    .hero-background {
      width: 180%;
      object-position: right bottom;
      aspect-ratio: 1200 / 800;
      min-height: 300px;
    }

    .hero-card {
      padding: 1rem;
      margin: 0 2rem;
    }

    .hero-card h1 {
      font-size: 1.5rem;
    }

    .hero-card p {
      font-size: 0.8rem;
    }

    .hero-links {
      gap: 0.75rem;
    }

    .hero-links a {
      min-width: 0;
      width: auto;
      padding: 0.8rem 1.2rem;
      font-size: 0.8rem;
    }
  }
</style>
