<style>
  .landing-main {
    width: 100vw;
    max-width: none;
    padding: 0;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .hero {
    width: 100%;
    min-height: calc(100vh - 60px); /* Account for navbar height */
    padding-bottom: 60px; /* Add padding at bottom to prevent cutoff */
    background-size: 100% auto;
    background-position: bottom;
    background-repeat: no-repeat;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 0rem;
    padding-top: 6rem;
    position: relative;
    margin: 0;
  }

  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .title-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    z-index: 2;
    margin-top: 6rem; /* Add some spacing from the top */
  }

  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1;
    color: #fefefe;
    text-align: center;
    margin-top: 0;
    border: 6px solid white;
    padding: 2rem;
  }

  .hero-subtitle {
    color: #fdfdfd;
    font-size: 1.5rem;
    margin: 2rem 0;
    padding: 0.5rem 1rem;
    font-family: "Dm Mono", monospace;
    text-shadow: 2px 2px 0px #000;
    font-weight: 500;
  }

  .cta-buttons {
    display: flex;
    gap: 2rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .cta-button {
    padding: 1rem 2rem;
    font-size: 1.1rem;
    font-weight: 600;
    border: none;
    cursor: pointer;
    transition: all 0.2s;
    font-family: "Dm Mono", monospace;
    text-transform: uppercase;
  }

  .cta-button.primary {
    background-color: #fdfdfd;
    color: #000;
    box-shadow: 6px 6px #000;
  }

  .cta-button.primary:hover {
    transform: translate(2px, 2px);
    box-shadow: 4px 4px #000;
  }

  .cta-button.secondary {
    background-color: transparent;
    border: 2px solid #fdfdfd;
    color: #fdfdfd;
    box-shadow: 6px 6px rgba(0, 0, 0, 0.8);
  }

  .cta-button.secondary:hover {
    transform: translate(2px, 2px);
    box-shadow: 4px 4px rgba(0, 0, 0, 0.8);
  }

  .overview {
    padding: 6rem 2rem;
    text-align: center;
  }

  .welcome-card {
    background: white;
    border-radius: 1rem;
    padding: 3rem 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    max-width: 1200px;
    margin: 0 auto;
  }

  .welcome-card h2 {
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    color: #2c3e50;
  }

  .welcome-text {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 3rem;
    color: #666;
    line-height: 1.6;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .feature {
    background: #fdfdfd;
    border-radius: 0.75rem;
    overflow: hidden;
    transition:
      transform 0.2s ease-in-out,
      box-shadow 0.2s ease-in-out;
    border: 2px solid #eee;
  }

  .feature:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
  }

  .feature-content {
    padding: 1.5rem;
  }

  .feature h3 {
    color: #2c3e50;
    font-size: 1.3rem;
    margin-bottom: 0.75rem;
  }

  .feature p {
    color: #666;
    font-size: 1rem;
    line-height: 1.5;
  }

  .mushroom-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
    padding: 2rem;
  }

  .card-wrapper {
    background: #fdfdfd;
    box-shadow: 6px 6px #000;
    transition: transform 0.2s;
    view-transition-name: none;
  }

  .card-wrapper:hover {
    transform: translate(2px, 2px);
    box-shadow: 4px 4px #000;
  }

  .mushroom-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
    view-transition-name: none;
    position: relative;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 1rem;
    background: #f5f5f5;
  }

  .card-content {
    padding: 1rem 1.5rem;
  }

  .card-content h2 {
    font-family: "DM Mono", monospace;
    font-size: 1.25rem;
    margin: 0;
    margin-bottom: 0.5rem;
    view-transition-name: none;
  }

  .category {
    font-family: "DM Mono", monospace;
    color: #666;
    margin: 0;
    text-transform: capitalize;
    font-size: 0.9rem;
  }

  .construction-card {
    background: rgba(255, 255, 255, 0.95);
    padding: 2rem;
    border-radius: 12px;
    border: 2px solid #000;
    box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.8);
    max-width: 500px;
    width: 100%
    margin: 0 1rem;
  }

  .construction-card h1 {
    font-size: 2.5rem;
    color: #000;
    border: none;
    padding: 0;
    margin-bottom: 1rem;
  }

  .notice {
    font-family: "DM Mono", monospace;
    font-size: 1.2rem;
    color: #000;
    margin: 1rem 0;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.5;
    color: #333;
    margin-bottom: 1.5rem;
  }

  .construction-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    max-width: 400px; /* Limit max width of button container */
    margin: 0 auto;
  }

  .construction-links a {
    padding: 0.8rem 1.5rem;
    font-family: "DM Mono", monospace;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    min-width: 200px; /* Set minimum width for buttons */
    text-align: center;
  }

  .social-link {
    background: #000;
    color: #fff;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .social-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  }

  .contact-link {
    border: 2px solid #000;
    color: #000;
    box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.2);
  }

  .contact-link:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0 rgba(0, 0, 0, 0.2);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2.5rem;
      padding: 1.5rem;
    }

    .hero {
      
      padding-bottom: 0px;
      flex: 1 0 100vh; /* Maintain full height on mobile */
      min-height: 100vh;
      background-size: 180% auto; /* Scale up on mobile */
      background-position: right bottom; /* Position from bottom center */
      height: auto;
      min-height: 100vh;
      padding-top: 0rem; /* Slightly less padding on mobile */
    }

    .hero-subtitle {
      font-size: 1.25rem;
      margin: 1.5rem 0;
      padding: 0.4rem 0.8rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 1.5rem;
      padding: 0 2rem;
    }

    .cta-button {
      width: 100%;
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .mushroom-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      padding: 1rem;
      gap: 1rem;
    }

    .image-wrapper {
      height: 180px;
    }

    .welcome-card {
      padding: 2rem 1.5rem;
    }

    .welcome-card h2 {
      font-size: 2rem;
    }

    .welcome-text {
      font-size: 1.1rem;
      margin-bottom: 2rem;
    }

    .feature-grid {
      gap: 1.5rem;
    }

    .feature-content {
      padding: 1.25rem;
    }

    .construction-card {
      padding: 1.5rem;
      margin: 0 1rem;
    }

    .construction-links {
      gap: 0.75rem;
    }

    .construction-links a {
      min-width: 0; /* Remove minimum width on mobile */
      width: auto; /* Let buttons size to content */
      padding: 0.8rem 1.2rem;
    }
  }

  .description a {
    color: inherit;
    text-decoration: none;
    border-bottom: 1px solid currentColor;
  }

  .description a:hover {
    opacity: 0.8;
  }
</style>
