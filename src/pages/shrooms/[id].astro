---
import Layout from '../../layouts/Layout.astro';
import { mushrooms } from '../../data/mushrooms';
import { Image } from 'astro:assets';

export function getStaticPaths() {
  return mushrooms.map(mushroom => ({
    params: { id: mushroom.id },
    props: { mushroom },
  }));
}

const { mushroom } = Astro.props;
---

<Layout title={`${mushroom.name} - shroom-mates`}>
  <main>
    <div class="mushroom-detail">
      <div class="image-container" style={`background: ${mushroom.highlightColor};`}>
        <img 
          src={`/shroom-mates${mushroom.imageSrc}`} 
          alt={mushroom.name}
          class="main-image"
        />
        {mushroom.cutoutImageSrc && (
          <Image 
            src={mushroom.cutoutImageSrc}
            alt={`${mushroom.name} cutout`}
            class="cutout-image"
          />
        )}
        <span class={`category ${mushroom.category}`}>{mushroom.category}</span>
      </div>
      
      <div class="content">
        <h1>{mushroom.name}</h1>
        <h2 class="scientific-name">{mushroom.details.scientificName}</h2>
        <p class="description">{mushroom.description}</p>
        
        <div class="details">
          <div class="detail-section">
            <h3>Habitat</h3>
            <p>{mushroom.details.habitat}</p>
          </div>
          
          <div class="detail-section">
            <h3>Season</h3>
            <p>{mushroom.details.season.join(', ')}</p>
          </div>
          
          <div class="detail-section">
            <h3>Characteristics</h3>
            <ul>
              {mushroom.details.characteristics.map(char => (
                <li>{char}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>

    {mushroom.recipes && mushroom.recipes.length > 0 && (
      <div class="recipes-section">
        <h2>Recipes</h2>
        <div class="recipes-grid">
          {mushroom.recipes.map(recipe => (
            <div class="recipe-card">
              <div class="recipe-header">
                <h3>{recipe.name}</h3>
                <span class={`difficulty ${recipe.difficulty}`}>{recipe.difficulty}</span>
              </div>
              <p class="recipe-description">{recipe.description}</p>
              
              <div class="recipe-time">
                <span>Prep: {recipe.prepTime}</span>
                <span>Cook: {recipe.cookTime}</span>
              </div>

              <div class="recipe-content">
                <div class="ingredients">
                  <h4>Ingredients</h4>
                  <ul>
                    {recipe.ingredients.map(ingredient => (
                      <li>{ingredient}</li>
                    ))}
                  </ul>
                </div>

                <div class="instructions">
                  <h4>Instructions</h4>
                  <ol>
                    {recipe.instructions.map(instruction => (
                      <li>{instruction}</li>
                    ))}
                  </ol>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    )}
    
    <a href="/shroom-mates/shrooms" class="back-link">‚Üê Back to All Mushrooms</a>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .mushroom-detail {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .image-container {
    position: relative;
    min-height: 400px;
  }

  .main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }

  .cutout-image {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    max-width: 80%;
    max-height: 80%;
    object-fit: contain;
    z-index: 2;
  }

  .category {
    position: absolute;
    top: 1rem;
    right: 1rem;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    color: white;
    font-weight: bold;
    text-transform: capitalize;
    z-index: 3;
  }

  .category.edible {
    background-color: #2ecc71;
  }

  .category.medicinal {
    background-color: #3498db;
  }

  .category.poisonous {
    background-color: #e74c3c;
  }

  .content {
    padding: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #2c3e50;
    margin: 0;
  }

  .scientific-name {
    font-size: 1.2rem;
    color: #7f8c8d;
    font-style: italic;
    margin: 0.5rem 0 1rem;
  }

  .description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #34495e;
    margin-bottom: 2rem;
  }

  .details {
    display: grid;
    gap: 1.5rem;
  }

  .detail-section h3 {
    font-size: 1.2rem;
    color: #2c3e50;
    margin: 0 0 0.5rem;
  }

  ul {
    list-style-type: disc;
    margin: 0;
    padding-left: 1.2rem;
  }

  li {
    margin: 0.3rem 0;
    color: #34495e;
  }

  .back-link {
    display: inline-block;
    margin-top: 2rem;
    color: #2c3e50;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.2s ease-in-out;
  }

  .back-link:hover {
    color: #3498db;
  }

  .recipes-section {
    margin-top: 4rem;
  }

  .recipes-section h2 {
    font-size: 2rem;
    color: #2c3e50;
    margin-bottom: 2rem;
  }

  .recipes-grid {
    display: grid;
    gap: 2rem;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }

  .recipe-card {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .recipe-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .recipe-header h3 {
    margin: 0;
    font-size: 1.5rem;
    color: #2c3e50;
  }

  .difficulty {
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: bold;
    text-transform: capitalize;
  }

  .difficulty.easy {
    background-color: #2ecc71;
    color: white;
  }

  .difficulty.medium {
    background-color: #f1c40f;
    color: #2c3e50;
  }

  .difficulty.hard {
    background-color: #e74c3c;
    color: white;
  }

  .recipe-description {
    color: #34495e;
    margin-bottom: 1.5rem;
  }

  .recipe-time {
    display: flex;
    gap: 1rem;
    margin-bottom: 1.5rem;
    color: #7f8c8d;
    font-size: 0.9rem;
  }

  .recipe-content {
    display: grid;
    gap: 2rem;
  }

  .recipe-content h4 {
    color: #2c3e50;
    margin: 0 0 1rem;
    font-size: 1.2rem;
  }

  .ingredients ul {
    list-style-type: disc;
    padding-left: 1.2rem;
    margin: 0;
  }

  .instructions ol {
    padding-left: 1.2rem;
    margin: 0;
  }

  .ingredients li,
  .instructions li {
    margin-bottom: 0.5rem;
    color: #34495e;
  }

  @media (max-width: 768px) {
    .mushroom-detail {
      grid-template-columns: 1fr;
    }

    .image-container {
      height: 300px;
    }

    .recipe-content {
      grid-template-columns: 1fr;
    }
  }
</style>
