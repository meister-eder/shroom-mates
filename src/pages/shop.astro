---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Shop - shroom-mates">
  <main>
    <div class="coming-soon">
      <h1>Shop Coming Soon</h1>
      <p>Our mushroom shop is currently under development. Check back later!</p>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: black;
    font-size: 20px;
    line-height: 1.6;
  }
  .coming-soon {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    text-align: center;
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    box-shadow: 0 8px 0 0 black;
    padding: 2rem;
    margin: 2rem 0;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1em;
    color: black;
  }
  p {
    margin-top: 0.5rem;
    color: #444;
  }
</style>
