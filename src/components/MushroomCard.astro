---
export interface Mushroom {
  id: string;
  name: string;
  category: string;
  cutoutImageSrc: { src: string };
}

interface Props {
  mushroom: Mushroom;
}

const { mushroom } = Astro.props as Props;
---

<div class="card-wrapper">
  <a
    href={`/shroom-mates/shrooms/${mushroom.id}`}
    class="mushroom-card"
    transition:animate="slide"
  >
    <div class="image-wrapper">
      <img
        src={mushroom.cutoutImageSrc.src}
        alt={mushroom.name}
        transition:name={`mushroom-image-${mushroom.id}`}
      />
    </div>
    <div class="card-content">
      <h2 transition:name={`mushroom-title-${mushroom.id}`}>{mushroom.name}</h2>
      <p class="category" transition:name={`mushroom-category-${mushroom.id}`}>
        {mushroom.category}
      </p>
    </div>
  </a>
</div>

<style>
  .card-wrapper {
    background: #fdfdfd;
    border-radius: 12px;
    border: 2px solid #282825;
    box-shadow: 6px 6px 0 #282825;
    transition: transform 0.2s;
    view-transition-name: none;
    overflow: hidden;
  }

  .card-wrapper:hover {
    transform: translate(2px, 2px);
    box-shadow: 4px 4px 0 #282825;
  }

  .mushroom-card {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
    view-transition-name: none;
    position: relative;
  }

  .image-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: 1rem;
    background: #f5f5f5;
  }

  .card-content {
    padding: 1rem 1.5rem;
  }

  .card-content h2 {
    font-family: "DM Mono", monospace;
    font-size: 1.25rem;
    margin: 0;
    margin-bottom: 0.5rem;
    view-transition-name: none;
  }

  .category {
    font-family: "DM Mono", monospace;
    color: #666;
    margin: 0;
    text-transform: capitalize;
    font-size: 0.9rem;
  }
</style>
