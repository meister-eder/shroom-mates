---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import SvgHeading from "./SvgHeading.astro";

// Fetch the landing page content
const landingPageEntry = await getEntry("landing-page", "content");

if (!landingPageEntry) {
  throw new Error("Could not find landing-page content");
}

const {
  mushroomShowcaseHeadingSvg,
  mushroomShowcaseTitle,
  mushroomShowcaseImage,
  mushroomShowcaseImageAlt,
  mushroomShowcaseGrowingMethodsText,
} = landingPageEntry.data;
---

<section
  class="section section--checkered mushroom-showcase"
  id="mushroom-showcase"
>
  <div class="showcase-wrapper">
    <div class="showcase-layout">
      <div class="showcase-content">
        <SvgHeading
          tag="h2"
          src={mushroomShowcaseHeadingSvg}
          alt={mushroomShowcaseTitle}
          class="showcase-heading"
        />
        {
          mushroomShowcaseGrowingMethodsText && (
            <p class="growing-methods-text">
              {mushroomShowcaseGrowingMethodsText}
            </p>
          )
        }
        <a
          href="/unsere-pilze"
          class="text-link"
          aria-label="Alle Pilzsorten ansehen"
        >
          Alle Pilzsorten entdecken â†’
        </a>
      </div>

      <div class="showcase-image-wrapper">
        <Image
          src={mushroomShowcaseImage}
          alt={mushroomShowcaseImageAlt}
          width={1920}
          height={1080}
          format="webp"
          loading="lazy"
          class="showcase-image"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .mushroom-showcase {
    width: 100%;
    background: transparent;
    border-top: 2px solid #000;
    padding: 0;
    overflow: hidden;
  }

  .showcase-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .showcase-heading {
    font-size: 2.5rem;
    color: var(--text-color);
    margin-bottom: 2rem;
    line-height: 1.2;
  }

  .showcase-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: stretch;
  }

  .showcase-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding: 2rem 0;
    justify-content: center;
  }

  .showcase-image-wrapper {
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: relative;
    border-radius: 12px;
  }

  .showcase-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: center;
  }

  .growing-methods-text {
    font-size: 1.25rem;
    line-height: 1.8;
    color: var(--text-color);
    margin: 0;
  }

  .text-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    align-self: flex-start;
    padding: 0.5rem 0;
  }

  .text-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent);
    transition: width 0.3s ease;
  }

  .text-link:hover::after,
  .text-link:focus-visible::after {
    width: 100%;
  }

  .text-link:hover,
  .text-link:focus-visible {
    color: var(--accent);
  }

  .text-link:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Tablet breakpoint */
  @media (max-width: 968px) {
    .showcase-wrapper {
      padding: 3rem 1.5rem;
    }

    .showcase-layout {
      gap: 3rem;
    }

    .showcase-heading {
      font-size: 2.2rem;
    }

    .growing-methods-text {
      font-size: 1.1rem;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 768px) {
    .showcase-wrapper {
      padding: 2.5rem 1rem;
    }

    .showcase-heading {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .showcase-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .showcase-content {
      order: 1;
      padding: 0;
    }

    .showcase-image-wrapper {
      order: 2;
      min-height: 350px;
    }

    .showcase-image {
      min-height: 350px;
    }

    .growing-methods-text {
      font-size: 1rem;
      line-height: 1.6;
    }

    .text-link {
      font-size: 1rem;
    }
  }

  /* Small mobile breakpoint */
  @media (max-width: 480px) {
    .showcase-wrapper {
      padding: 2rem 1rem;
    }

    .showcase-heading {
      font-size: 1.8rem;
      margin-bottom: 1.25rem;
    }

    .showcase-layout {
      gap: 1.5rem;
    }

    .showcase-image-wrapper {
      min-height: 300px;
    }

    .showcase-image {
      min-height: 300px;
    }

    .showcase-content {
      gap: 1.5rem;
    }

    .growing-methods-text {
      font-size: 0.95rem;
    }
  }
</style>
