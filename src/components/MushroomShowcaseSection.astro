---
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import SvgHeading from "./SvgHeading.astro";

// Fetch the landing page content
const landingPageEntry = await getEntry("landing-page", "content");

if (!landingPageEntry) {
  throw new Error("Could not find landing-page content");
}

const {
  mushroomShowcaseHeadingSvg,
  mushroomShowcaseTitle,
  mushroomShowcaseImage,
  mushroomShowcaseImageAlt,
  mushroomShowcaseGrowingMethodsText,
} = landingPageEntry.data;
---

<section class="mushroom-showcase" id="mushroom-showcase">
  <div class="showcase-card">
    <div class="showcase-content">
      <SvgHeading
        tag="h2"
        src={mushroomShowcaseHeadingSvg}
        alt={mushroomShowcaseTitle}
        class="showcase-heading"
      />
      {
        mushroomShowcaseGrowingMethodsText && (
          <p class="growing-methods-text">
            {mushroomShowcaseGrowingMethodsText}
          </p>
        )
      }
      <a
        href="/unsere-pilze"
        class="text-link"
        aria-label="Alle Pilzsorten ansehen"
      >
        Alle Pilzsorten entdecken â†’
      </a>
    </div>

    <div class="showcase-image-wrapper">
      <Image
        src={mushroomShowcaseImage}
        alt={mushroomShowcaseImageAlt}
        width={1920}
        height={1080}
        format="webp"
        loading="lazy"
        class="showcase-image"
      />
    </div>
  </div>
</section>

<style>
  .mushroom-showcase {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
    background: #ffffff;
    padding: 0;
    overflow: hidden;
    border-top: 2px solid #000;
  }

  .showcase-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    align-items: stretch;
    min-height: 60vh;
    width: 100%;
  }

  .showcase-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding: 4rem 6rem;
    background: #ffffff;
    height: 100%;
    justify-content: center;
  }

  .showcase-heading {
    font-size: 2.5rem;
    color: var(--text-color);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .showcase-image-wrapper {
    width: 100%;
    height: 100%;
    min-height: 60vh;
    overflow: hidden;
    position: relative;
    border-left: 2px solid #000;
  }

  .showcase-image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    min-height: 60vh;
  }

  .growing-methods-text {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
    margin: 0;
  }

  .text-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s ease;
    position: relative;
    align-self: flex-start;
    padding: 0.5rem 0;
  }

  .text-link::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--accent);
    transition: width 0.3s ease;
  }

  .text-link:hover::after,
  .text-link:focus-visible::after {
    width: 100%;
  }

  .text-link:hover,
  .text-link:focus-visible {
    color: var(--accent);
  }

  .text-link:focus-visible {
    outline: 2px solid var(--accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  /* Tablet breakpoint */
  @media (max-width: 968px) {
    .showcase-content {
      padding: 2.5rem 3rem;
    }

    .showcase-heading {
      font-size: 2rem;
    }

    .growing-methods-text {
      font-size: 1rem;
    }
  }

  /* Mobile breakpoint */
  @media (max-width: 768px) {
    .showcase-card {
      grid-template-columns: 1fr;
      min-height: auto;
      display: flex;
      flex-direction: column;
    }

    .showcase-content {
      order: 1;
      padding: 2rem 1.5rem;
    }

    .showcase-image-wrapper {
      order: 2;
      min-height: 50vh;
      border-left: none;
      border-top: 2px solid #000;
    }

    .showcase-image {
      min-height: 50vh;
    }

    .showcase-heading {
      font-size: 1.8rem;
    }

    .growing-methods-text {
      font-size: 0.95rem;
      line-height: 1.6;
    }

    .text-link {
      font-size: 1rem;
    }
  }

  /* Small mobile breakpoint */
  @media (max-width: 480px) {
    .showcase-content {
      padding: 1.5rem 1rem;
    }

    .showcase-heading {
      font-size: 1.6rem;
    }

    .showcase-image-wrapper {
      min-height: 40vh;
    }

    .showcase-image {
      min-height: 40vh;
    }

    .growing-methods-text {
      font-size: 0.9rem;
    }
  }
</style>
