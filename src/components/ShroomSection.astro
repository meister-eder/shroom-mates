---
import { type Mushroom } from '../data/mushrooms';
import { Image } from 'astro:assets';

interface Props {
  mushroom?: Mushroom;
}

const { mushroom } = Astro.props;

if (!mushroom) {
  return null;
}

---

<section>
  <a href={`/shroom-mates/shrooms/${mushroom.id}`} class="mushroom-link" transition:name={`mushroom-${mushroom.id}`}>
    <div class="mushroom-card">
      <div class="image-container" style={mushroom.highlightColor ? `background: ${mushroom.highlightColor}` : undefined}>
        {mushroom.cutoutImageSrc && (
          <Image 
            src={mushroom.cutoutImageSrc}
            alt={mushroom.name}
            width={300}
            height={225}
            class="mushroom-image"
            transition:name={`mushroom-image-${mushroom.id}`}
          />
        )}
      </div>
      <div class="content">
        <h3 transition:name={`mushroom-title-${mushroom.id}`}>{mushroom.name}</h3>
        <p>{mushroom.description}</p>
        <div class="category-wrapper">
          <span class={`category ${mushroom.category}`}>{mushroom.category}</span>
        </div>
      </div>
    </div>
  </a>
</section>

<style>
  section {
    margin: 0;
  }

  .mushroom-link {
    text-decoration: none;
    color: inherit;
    display: block;
    transition: transform 0.2s ease-in-out;
  }

  .mushroom-link:hover {
    transform: translateY(-5px);
  }

  .mushroom-card {
    background: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: box-shadow 0.2s ease-in-out;
  }

  .mushroom-link:hover .mushroom-card {
    box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
  }

  .image-container {
    position: relative;
    padding: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 225px;
  }

  .mushroom-image {
    max-width: 100%;
    height: auto;
    object-fit: contain;
    max-height: 225px;
  }

  .content {
    padding: 1.25rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  h3 {
    font-size: 1.25rem;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  p {
    color: #34495e;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .category-wrapper {
    margin-top: auto;
    display: flex;
  }

  .category {
    display: inline-flex;
    align-items: center;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 500;
    text-transform: capitalize;
    width: fit-content;
  }

  .edible {
    background: #e1f5e1;
    color: #2c662d;
  }

  .medicinal {
    background: #e1e1f5;
    color: #2d2d66;
  }

  .poisonous {
    background: #f5e1e1;
    color: #662c2c;
  }
</style>
