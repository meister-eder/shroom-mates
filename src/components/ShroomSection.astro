---
import TextBox from "./TextBox.astro";
import TitleBox from "./TitleBox.astro";
import { Picture } from "astro:assets";
import type { Mushroom } from '../data/mushrooms';

interface Props {
  title: string;
  mushrooms: Mushroom[];
}

const { title, mushrooms } = Astro.props;
---

<section>
  <h2>{title}</h2>
  <div class="mushroom-grid">
    {mushrooms.map((mushroom) => (
      <a href={`/shrooms/${mushroom.id}`} class="mushroom-card">
        <img src={mushroom.imageSrc} alt={mushroom.name} />
        <div class="content">
          <h3>{mushroom.name}</h3>
          <p>{mushroom.description}</p>
        </div>
      </a>
    ))}
  </div>
</section>

<style>
  section {
    margin: 2rem 0;
  }

  h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    color: #2c3e50;
  }

  .mushroom-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    padding: 1rem;
  }

  .mushroom-card {
    background: white;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s ease-in-out;
    text-decoration: none;
    color: inherit;
  }

  .mushroom-card:hover {
    transform: translateY(-4px);
  }

  .mushroom-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .content {
    padding: 1rem;
  }

  h3 {
    margin: 0;
    font-size: 1.5rem;
    color: #2c3e50;
  }

  p {
    margin: 0.5rem 0 0;
    color: #666;
  }
</style>
