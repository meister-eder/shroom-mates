const { text = "ğŸ„ğŸ„ğŸ„ ğŸ„ğŸ„ğŸ„ ğŸ„ğŸ„ğŸ„" } = Astro.props;
---

<div class="divider-container">
  <div class="divider-line">
    <span class="moving-text">{text}</span>
  </div>
</div>

<style>
  .divider-container {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0rem 0;
  }

  .divider-line {
    position: relative;
    width: 100%;
    height: 20px;
    background-color: #transparent;
    overflow: hidden;
  }

  .moving-text {
    position: absolute;
    top: -3px; /* Adjust as needed for the emoji or text size */
    animation: move-text 3s linear infinite;
    font-size: 1rem; /* Adjust size as needed */
  }

  @keyframes move-text {
    0% {
      right: -20%; /* Start outside the left of the line */
    }
    100% {
      right: 100%; /* Move to the right end of the line */
    }
  }
</style>
