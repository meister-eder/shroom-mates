<header role="banner">
  <nav role="navigation" aria-label="Hauptnavigation">
    <div class="logo">
      <a href="/" aria-label="Shroom-Mates Startseite">shroom-mates</a>
    </div>
    <button
      class="hamburger"
      aria-label="Navigationsmenü öffnen"
      aria-expanded="false"
      aria-controls="nav-links"
      type="button"
    >
      <span class="hamburger-box">
        <span class="hamburger-inner"></span>
      </span>
    </button>
    <ul class="nav-links" id="nav-links" role="list">
      <li><a href="/contact">Kontakt</a></li>
      <li><a href="/impressum">Impressum</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: white;
    border-bottom: 2px solid #5f5f5f;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .logo {
    margin: 0 0rem;
  }

  .logo a {
    font-family: "DM Mono", monospace;
    font-size: 1.25rem;
    color: #000;
    text-decoration: none;
    padding: 0.2rem 0.9rem;
    background-color: #fdfdfd;
    box-shadow: 4px 4px #000;
    transition: all 0.2s;
  }

  .logo a:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px #000;
  }

  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: #000;
    text-decoration: none;
    font-family: "DM Mono", monospace;
    font-size: 1.1rem;
    padding: 0.5rem 0.75rem;
    transition: all 0.2s;
  }

  .nav-links a:hover {
    background-color: #fdfdfd;
    box-shadow: 3px 3px #5f5f5f;
  }

  .hamburger {
    display: none;
    border: none;
    background: none;
    cursor: pointer;
    padding: 0.5rem;
    width: 40px;
    height: 40px;
    position: relative;
    z-index: 2;
  }

  .hamburger:hover {
    transform: translate(2px, 2px);
  }

  .hamburger:focus-visible {
    outline: 2px solid var(--focus-color, #5f5f5f);
    outline-offset: 2px;
  }

  .hamburger-box {
    display: inline-block;
    position: relative;
    width: 30px;
    height: 24px;
  }

  .hamburger-inner {
    display: block;
    top: 50%;
    margin-top: -2px;
  }

  .hamburger-inner,
  .hamburger-inner::before,
  .hamburger-inner::after {
    width: 30px;
    height: 3px;
    background-color: #000;
    position: absolute;
    transition: transform 0.15s ease;
  }

  .hamburger-inner::before,
  .hamburger-inner::after {
    content: "";
    display: block;
  }

  .hamburger-inner::before {
    top: -10px;
  }

  .hamburger-inner::after {
    bottom: -10px;
  }

  @media (max-width: 768px) {
    nav {
      padding: 0.75rem 1.5rem;
    }

    .hamburger {
      display: block;
    }

    .nav-links {
      display: none;
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      background: white;
      flex-direction: column;
      align-items: center;
      padding: 1rem;
      gap: 1rem;
      border-bottom: 2px solid #5f5f5f;
    }

    .nav-links.active {
      display: flex;
    }

    nav.menu-open .hamburger-inner {
      transform: rotate(45deg);
    }

    nav.menu-open .hamburger-inner::before {
      transform: translateY(10px) rotate(0deg);
      opacity: 0;
    }

    nav.menu-open .hamburger-inner::after {
      transform: translateY(-10px) rotate(-90deg);
    }

    .nav-links a {
      font-size: 1rem;
      padding: 0.4rem 0.6rem;
    }
  }
</style>
