---
import { Image } from "astro:assets";
import heroOyster from "../assets/images/hero_oyster.png";
import seitlingTasse from "../assets/images/seitling_tasse_cutout.png";
import whitePearlTasse from "../assets/images/white_pearl_tasse_cutout.png";
import img9970 from "../assets/images/IMG_9970.jpeg";
---

<section class="image-gallery" id="gallery">
  <div class="gallery-container">
    <h2>Unsere Pilze</h2>
    <p class="gallery-subtitle">Frische Austernpilze in höchster Qualität</p>

    <div class="gallery-grid">
      <div class="gallery-item featured">
        <Image
          src={img9970}
          alt="Frische Austernpilze der shroom-mates"
          width={500}
          height={400}
          format="webp"
          loading="lazy"
        />
        <div class="item-overlay">
          <h3>Frisch geerntet</h3>
          <p>Direkt vom Substrat zu dir</p>
        </div>
      </div>

      <div class="gallery-item">
        <Image
          src={heroOyster}
          alt="Hochwertige Austernpilze"
          width={350}
          height={300}
          format="webp"
          loading="lazy"
        />
        <div class="item-overlay">
          <h3>Premium Qualität</h3>
          <p>Nachhaltig angebaut</p>
        </div>
      </div>

      <div class="gallery-item">
        <Image
          src={seitlingTasse}
          alt="Austernpilze artistically presented"
          width={350}
          height={300}
          format="webp"
          loading="lazy"
        />
        <div class="item-overlay">
          <h3>Vielseitig</h3>
          <p>Perfekt für jede Küche</p>
        </div>
      </div>

      <div class="gallery-item">
        <Image
          src={whitePearlTasse}
          alt="White Pearl Austernpilze"
          width={350}
          height={300}
          format="webp"
          loading="lazy"
        />
        <div class="item-overlay">
          <h3>Verschiedene Sorten</h3>
          <p>Je nach Saison</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .image-gallery {
    padding: 4rem 1rem;
    background: #fff;
    border-top: 3px solid #000;
    width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
  }

  .gallery-container {
    max-width: 1200px;
    margin: 0 auto;
    text-align: center;
    width: 100%;
    box-sizing: border-box;
  }

  .gallery-container h2 {
    font-size: 2.5rem;
    color: #000;
    margin-bottom: 1rem;
    font-family: "DM Mono", monospace;
  }

  .gallery-subtitle {
    font-size: 1.2rem;
    color: #666;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    grid-template-rows: auto auto;
    gap: 1.5rem;
    grid-template-areas:
      "featured item2 item3"
      "featured item4 item4";
  }

  .gallery-item {
    position: relative;
    border: 3px solid #000;
    border-radius: 12px;
    overflow: hidden;
    background: #fff;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .gallery-item:hover {
    transform: translateY(-5px);
    box-shadow: 8px 8px 0 rgba(0, 0, 0, 0.3);
  }

  .gallery-item.featured {
    grid-area: featured;
  }

  .gallery-item:nth-child(2) {
    grid-area: item2;
  }

  .gallery-item:nth-child(3) {
    grid-area: item3;
  }

  .gallery-item:nth-child(4) {
    grid-area: item4;
  }

  .gallery-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover img {
    transform: scale(1.05);
  }

  .item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: #fff;
    padding: 2rem 1.5rem 1.5rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .item-overlay {
    transform: translateY(0);
  }

  .item-overlay h3 {
    font-size: 1.2rem;
    margin: 0 0 0.5rem 0;
    font-family: "DM Mono", monospace;
  }

  .item-overlay p {
    font-size: 0.9rem;
    margin: 0;
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .image-gallery {
      padding: 3rem 0.5rem;
    }

    .gallery-container {
      padding: 0 0.5rem;
    }

    .gallery-container h2 {
      font-size: 2rem;
    }

    .gallery-grid {
      grid-template-columns: 1fr 1fr;
      grid-template-areas:
        "featured featured"
        "item2 item3"
        "item4 item4";
      gap: 0.75rem;
      width: 100%;
    }

    .gallery-item {
      aspect-ratio: 4/3;
      width: 100%;
      min-width: 0;
    }

    .gallery-item.featured {
      aspect-ratio: 16/9;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: 1fr;
      grid-template-areas:
        "featured"
        "item2"
        "item3"
        "item4";
    }

    .gallery-item {
      aspect-ratio: 4/3;
    }

    .item-overlay {
      transform: translateY(0);
      background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
      padding: 1rem;
    }
  }
</style>
