---
/**
 * FAQ Component
 * Displays frequently asked questions with FAQPage structured data for SEO.
 * FAQ content is loaded from the CMS-editable content collection as an array.
 * Helps capture featured snippets for common mushroom-related queries in Leipzig.
 */
import { getEntry } from "astro:content";

interface FAQItem {
  question: string;
  answer: string;
  link?: string;
}

// Load FAQ items from the content collection
const faqPageEntry = await getEntry("faq-page", "content");
if (!faqPageEntry) {
  throw new Error("FAQ page content not found");
}

const faqs: FAQItem[] = faqPageEntry.data.faqs;

// Generate FAQPage Schema for SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  mainEntity: faqs.map((faq) => ({
    "@type": "Question",
    name: faq.question,
    acceptedAnswer: {
      "@type": "Answer",
      text: faq.answer,
    },
  })),
};
---

<!-- FAQPage Schema for SEO -->
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<section class="faq-section" aria-label="Häufig gestellte Fragen">
  <h2>Häufig gestellte Fragen</h2>

  <div class="faq-list">
    {
      faqs.map((faq) => (
        <details class="faq-item">
          <summary>
            <span class="question-text">{faq.question}</span>
            <span class="toggle-icon" aria-hidden="true">
              +
            </span>
          </summary>
          <div class="answer">
            <p>{faq.answer}</p>
            {faq.link && (
              <p class="faq-link">
                <a href={faq.link}>Mehr erfahren →</a>
              </p>
            )}
          </div>
        </details>
      ))
    }
  </div>

  <div class="more-questions">
    <p>
      Weitere Fragen? <a href="mailto:hey@shroom-mates.de"
        >Schreib uns eine E-Mail</a
      > oder nutze das Kontaktformular oben.
    </p>
  </div>
</section>

<style>
  .faq-section {
    margin-top: 3rem;
    padding: 2rem;
    border-top: 2px solid var(--focus-color, #000);
  }

  .faq-section h2 {
    font-size: 1.8rem;
    font-weight: 700;
    text-align: center;
    margin-bottom: 2rem;
    color: var(--text-color);
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: #fff;
    border: 2px solid var(--focus-color, #000);
    border-radius: 8px;
    overflow: hidden;
  }

  .faq-item summary {
    padding: 1.25rem 1.5rem;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    font-weight: 600;
    font-size: 1.1rem;
    list-style: none;
    transition: background-color 0.2s ease;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-item summary:focus-visible {
    outline: 2px solid var(--focus-color, #000);
    outline-offset: -2px;
  }

  .question-text {
    flex: 1;
  }

  .toggle-icon {
    font-size: 1.5rem;
    font-weight: 400;
    color: #666;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .faq-item[open] .toggle-icon {
    transform: rotate(45deg);
  }

  .answer {
    padding: 0 1.5rem 1.5rem;
    border-top: 1px solid #eee;
  }

  .answer p {
    margin: 1rem 0 0;
    line-height: 1.7;
    color: var(--text-color, #333);
  }

  .faq-link {
    margin-top: 0.75rem !important;
  }

  .faq-link a {
    color: var(--accent, #000);
    text-decoration: underline;
    text-underline-offset: 2px;
    font-weight: 600;
  }

  .faq-link a:hover {
    text-decoration-thickness: 2px;
  }

  .faq-link a:focus-visible {
    outline: 2px solid var(--focus-color, #000);
    outline-offset: 2px;
  }

  .more-questions {
    max-width: 800px;
    margin: 2rem auto 0;
    text-align: center;
    padding: 1.5rem;
    background: #fff;
    border-radius: 8px;
    border: 2px solid var(--focus-color, #000);
  }

  .more-questions p {
    margin: 0;
    font-size: 1rem;
  }

  .more-questions a {
    color: var(--text-color, #000);
    font-weight: 600;
    text-decoration: underline;
    transition: opacity 0.2s ease;
  }

  .more-questions a:hover {
    opacity: 0.7;
  }

  .more-questions a:focus-visible {
    outline: 2px solid var(--focus-color, #000);
    outline-offset: 2px;
  }

  @media (max-width: 768px) {
    .faq-section {
      padding: 1.5rem;
    }

    .faq-section h2 {
      font-size: 1.5rem;
    }

    .faq-item summary {
      padding: 1rem 1.25rem;
      font-size: 1rem;
    }

    .answer {
      padding: 0 1.25rem 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .faq-section {
      padding: 1rem;
    }

    .faq-item summary {
      padding: 0.875rem 1rem;
      font-size: 0.95rem;
    }

    .answer {
      padding: 0 1rem 1rem;
    }

    .answer p {
      font-size: 0.95rem;
    }
  }
</style>
