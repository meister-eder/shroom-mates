---
import "@fontsource/geist-sans";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  isLandingPage?: boolean;
}

const {
  title,
  description = "Hochwertige Edelpilze aus Leipzig, Plagwitz. Frisch kultiviert und nachhaltig angebaut von den shroom-mates.",
  ogImage,
  isLandingPage = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultOgImage =
  ogImage || new URL("/favicon.ico", Astro.site).toString();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <ClientRouter />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO and Open Graph -->
    <title>{title} | shroom-mates</title>
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={`${title} | shroom-mates`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="shroom-mates" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:image" content={defaultOgImage} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | shroom-mates`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={defaultOgImage} />

    <!-- Additional meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="shroom-mates" />
    <meta name="theme-color" content="#fdfcea" />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <!-- Skip link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Zum Hauptinhalt springen</a>

    <div class="site-wrapper">
      <Header />
      <main
        id="main-content"
        class={isLandingPage ? "site-main" : "site-main with-nav-spacing"}
        aria-label="Seiteninhalt"
      >
        <slot />
      </main>

      <Footer />

      <script>
        import "../scripts/hamburger.js";
      </script>

      <script>
        // Check for View Transitions API support
        const hasViewTransitions = document.startViewTransition !== undefined;
        console.log("Native View Transitions supported:", hasViewTransitions);
        if (!hasViewTransitions) {
          console.log(
            "Using fallback transitions for better browser compatibility"
          );

          // Add CSS-based transition effects for fallback
          document.addEventListener("astro:before-preparation", () => {
            const main = document.querySelector(".site-main");
            if (main) {
              main.classList.add("astro-transitioning");
            }
          });

          document.addEventListener("astro:after-swap", () => {
            const main = document.querySelector(".site-main");
            if (main) {
              // Small delay to ensure smooth transition
              setTimeout(() => {
                main.classList.remove("astro-transitioning");
              }, 50);
            }
          });
        }
      </script>

      <style is:global>
        @import url("../styles/global.css");

        :root {
          --duration: 0.2s;
        }

        /* Accessibility utilities */
        .skip-link {
          position: absolute;
          top: -40px;
          left: 6px;
          background: var(--text-color);
          color: var(--bg-color);
          padding: 8px;
          text-decoration: none;
          z-index: 1001;
          border-radius: 4px;
        }

        .skip-link:focus {
          top: 6px;
        }

        .sr-only {
          position: absolute;
          width: 1px;
          height: 1px;
          padding: 0;
          margin: -1px;
          overflow: hidden;
          clip: rect(0, 0, 0, 0);
          white-space: nowrap;
          border: 0;
        }

        /* Focus styles */
        :focus-visible {
          outline: 2px solid var(--focus-color);
          outline-offset: 2px;
        }

        /* Fallback transitions for browsers without View Transitions API */
        @media (prefers-reduced-motion: no-preference) {
          .site-main {
            transition: opacity 0.2s ease-in-out;
          }

          .site-main.astro-transitioning {
            opacity: 0.8;
          }
        }

        html {
          height: 100%;
          margin: 0;
          padding: 0;
          scroll-behavior: smooth;
          overflow-x: hidden;
        }

        body {
          min-height: 100%;
          margin: 0;
          padding: 0;
          overflow-x: hidden;
        }

        * {
          box-sizing: border-box;
        }

        .site-wrapper {
          display: flex;
          flex-direction: column;
          min-height: 100vh;
          position: relative;
        }

        .site-main {
          flex: 1 0 auto;
          width: 100%;
          padding: 1rem;
        }

        .site-main:not(.with-nav-spacing) {
          max-width: none;
          padding: 0;
          margin: 0;
        }

        .site-main.with-nav-spacing {
          max-width: 1200px;
          margin: 0 auto;
          padding-top: var(--navbar-height);
        }

        /* Improve image loading */
        img {
          height: auto;
          max-width: 100%;
        }
      </style>
    </div>
  </body>
</html>
