---
import "@fontsource/dm-mono";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  isLandingPage?: boolean;
}

const {
  title,
  description = "Hochwertige Austernpilze vom Egenberger Samstagsmarkt in Leipzig. Frisch kultiviert und nachhaltig angebaut von den shroom-mates.",
  ogImage,
  isLandingPage = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultOgImage =
  ogImage || new URL("/favicon.svg", Astro.site).toString();
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preload critical font -->
    <link
      rel="preload"
      href="/node_modules/@fontsource/dm-mono/files/dm-mono-latin-400-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- SEO and Open Graph -->
    <title>{title} | Shroom-Mates</title>
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:title" content={`${title} | Shroom-Mates`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Shroom-Mates" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:image" content={defaultOgImage} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Shroom-Mates`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={defaultOgImage} />

    <!-- Additional meta tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Shroom-Mates" />
    <meta name="theme-color" content="#ffffff" />

    <ClientRouter />
  </head>
  <body>
    <!-- Skip link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Zum Hauptinhalt springen</a>

    <div class="site-wrapper">
      <Header />
      <main
        id="main-content"
        class={isLandingPage ? "site-main" : "site-main with-nav-spacing"}
        role="main"
      >
        <slot />
      </main>

      <footer role="contentinfo">
        <p>
          ¬©Ô∏è 2025 shroom-mates, built with üçÑ and <a
            href="https://github.com/meister-eder/shroom-mates"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="GitHub Repository (√∂ffnet in neuem Tab)"
            >free software</a
          > in Leipzig
        </p>
        <p>
          <a
            class="insta-link"
            href="https://www.instagram.com/shroom_mates_le/"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Instagram Profil (√∂ffnet in neuem Tab)"
            ><svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 448 512"
              height="22"
              width="22"
              aria-hidden="true"
              focusable="false"
              ><!--!Font Awesome Free 6.7.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2025 Fonticons, Inc.-->
              <path
                d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"
