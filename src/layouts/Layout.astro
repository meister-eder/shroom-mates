---
import "@fontsource/geist-sans";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  isLandingPage?: boolean;
}

const {
  title,
  description = "Hochwertige Edelpilze aus Leipzig-Plagwitz. Frisch kultiviert, nachhaltig angebaut, regional verfügbar. Rosenseitling, Pioppino, Lion's Mane und mehr von den shroom-mates.",
  ogImage,
  isLandingPage = false,
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
// Use a better default image - the logo with mushrooms
const defaultOgImage =
  ogImage ||
  new URL("/assets/logo_with_shrooms_and_text.png", Astro.site).toString();

// Structured data for local business SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "https://shroom-mates.de",
  name: "shroom-mates",
  image: new URL(
    "/assets/logo_with_shrooms_and_text.png",
    Astro.site
  ).toString(),
  description: description,
  address: {
    "@type": "PostalAddress",
    streetAddress: "Markranstädter Straße 8",
    addressLocality: "Leipzig",
    addressRegion: "Sachsen",
    postalCode: "04229",
    addressCountry: "DE",
  },
  geo: {
    "@type": "GeoCoordinates",
    latitude: "51.3296",
    longitude: "12.3177",
  },
  url: "https://shroom-mates.de",
  email: "hey@shroom-mates.de",
  priceRange: "$$",
  areaServed: {
    "@type": "City",
    name: "Leipzig",
  },
  hasOfferCatalog: {
    "@type": "OfferCatalog",
    name: "Edelpilze",
    itemListElement: [
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Product",
          name: "Rosenseitling",
          description: "Rosa Austernpilze",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Product",
          name: "Pioppino",
          description: "Südlicher Schüppling",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Product",
          name: "Lion's Mane",
          description: "Igelstachelbart",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Product",
          name: "White Pearl",
          description: "Weißer Austernpilz",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Product",
          name: "Maitake",
          description: "Klapperschwamm",
        },
      },
      {
        "@type": "Offer",
        itemOffered: {
          "@type": "Product",
          name: "Growkits",
          description: "Pilzzuchtsets zum Selberziehen",
        },
      },
    ],
  },
};
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <ClientRouter />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta
      name="google-site-verification"
      content="4MHVB3PHlJNORM3zCWb3yyka7m2Y-cEwrXlLAZitKFs"
    />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO and Open Graph -->
    <title>{title}</title>
    <link rel="canonical" href={canonicalURL} />

    <!-- Structured Data for Local Business SEO -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(structuredData)}
    />

    <!-- Location/Geo Targeting -->
    <meta name="geo.region" content="DE-SN" />
    <meta name="geo.placename" content="Leipzig" />
    <meta name="geo.position" content="51.325545403892036;12.330445796958628" />
    <meta name="ICBM" content="51.325545403892036, 2.330445796958628" />

    <!-- Keywords for local search -->
    <meta
      name="keywords"
      content="Edelpilze Leipzig, Austernpilze Leipzig, Pilze Leipzig, Plagwitz, regionale Pilze, nachhaltige Pilze, frische Pilze, Markthalle Leipzig, Bio Pilze"
    />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="shroom-mates" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_DE" />
    <meta property="og:image" content={defaultOgImage} />
    <meta property="og:image:width" content="512" />
    <meta property="og:image:height" content="512" />
    <meta
      property="og:image:alt"
      content="shroom-mates Logo - Edelpilze aus Leipzig"
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={defaultOgImage} />
    <meta
      name="twitter:image:alt"
      content="shroom-mates Logo - Edelpilze aus Leipzig"
    />

    <!-- Additional meta tags -->
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <meta name="author" content="shroom-mates - Emmelie Kunz & Tim Eder" />
    <meta name="theme-color" content="#fdfcea" />

    <!-- Language alternates (for future expansion) -->
    <link rel="alternate" hreflang="de" href={canonicalURL} />
    <link rel="alternate" hreflang="x-default" href={canonicalURL} />

    <!-- Sitemap -->
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <!-- Skip link for keyboard navigation -->
    <a href="#main-content" class="skip-link">Zum Hauptinhalt springen</a>

    <div class="site-wrapper">
      <Header />
      <main
        id="main-content"
        class={isLandingPage ? "site-main" : "site-main with-nav-spacing"}
        aria-label="Seiteninhalt"
      >
        <slot />
      </main>

      <Footer />

      <script>
        import "../scripts/hamburger.js";
      </script>

      <script>
        // Check for View Transitions API support
        const hasViewTransitions = document.startViewTransition !== undefined;
        console.log("Native View Transitions supported:", hasViewTransitions);
        if (!hasViewTransitions) {
          console.log(
            "Using fallback transitions for better browser compatibility"
          );

          // Add CSS-based transition effects for fallback
          document.addEventListener("astro:before-preparation", () => {
            const main = document.querySelector(".site-main");
            if (main) {
              main.classList.add("astro-transitioning");
            }
          });

          document.addEventListener("astro:after-swap", () => {
            const main = document.querySelector(".site-main");
            if (main) {
              // Small delay to ensure smooth transition
              setTimeout(() => {
                main.classList.remove("astro-transitioning");
              }, 50);
            }
          });
        }
      </script>

      <style is:global>
        @import url("../styles/global.css");

        :root {
          --duration: 0.2s;
        }

        /* Accessibility utilities */
        .skip-link {
          position: absolute;
          top: -40px;
          left: 6px;
          background: var(--text-color);
          color: var(--bg-color);
          padding: 8px;
          text-decoration: none;
          z-index: 1001;
          border-radius: 4px;
        }

        .skip-link:focus {
          top: 6px;
        }

        .sr-only {
          position: absolute;
          width: 1px;
          height: 1px;
          padding: 0;
          margin: -1px;
          overflow: hidden;
          clip: rect(0, 0, 0, 0);
          white-space: nowrap;
          border: 0;
        }

        /* Focus styles */
        :focus-visible {
          outline: 2px solid var(--focus-color);
          outline-offset: 2px;
        }

        /* Fallback transitions for browsers without View Transitions API */
        @media (prefers-reduced-motion: no-preference) {
          .site-main {
            transition: opacity 0.2s ease-in-out;
          }

          .site-main.astro-transitioning {
            opacity: 0.8;
          }
        }

        html {
          height: 100%;
          margin: 0;
          padding: 0;
          scroll-behavior: smooth;
          overflow-x: hidden;
        }

        body {
          min-height: 100%;
          margin: 0;
          padding: 0;
          overflow-x: hidden;
        }

        * {
          box-sizing: border-box;
        }

        .site-wrapper {
          display: flex;
          flex-direction: column;
          min-height: 100vh;
          position: relative;
        }

        .site-main {
          flex: 1 0 auto;
          width: 100%;
          padding: 1rem;
        }

        .site-main:not(.with-nav-spacing) {
          max-width: none;
          padding: 0;
          margin: 0;
        }

        .site-main.with-nav-spacing {
          max-width: 1200px;
          margin: 0 auto;
          margin-top: var(--navbar-height);
          padding-top: 1.5rem;
        }

        @media (max-width: 768px) {
          .site-main.with-nav-spacing {
            margin-top: var(--navbar-height-mobile);
            padding-top: 1rem;
          }
        }

        /* Improve image loading */
        img {
          height: auto;
          max-width: 100%;
        }
      </style>
    </div>
  </body>
</html>
