        @import url("../styles/global.css");

        :root {
          --duration: 0.2s;
        }

        html {
          height: 100%;
          margin: 0;
          padding: 0;
        }

        body {
          min-height: 100%;
          margin: 0;
          padding: 0;
        }

        .site-wrapper {
          display: flex;
          flex-direction: column;
          min-height: 100vh;
          position: relative;
        }

        .site-main {
          flex: 1 0 auto;
          width: 100%;
          padding: 1rem;
        }

        .site-main:not(.with-nav-spacing) {
          max-width: none;
          padding: 0;
          margin: 0;
        }

        .site-main.with-nav-spacing {
          max-width: 1200px;
          margin: 0 auto;
          padding-top: 6rem;
        }

        footer {
          flex-shrink: 0;
          width: 100%;
          background-color: rgb(228, 228, 228);
          z-index: 1;
          position: relative;
        }

        footer > p {
          margin: 0;
          padding: 1rem 2rem;
          text-align: center;
        }

        footer a {
          color: inherit;
          text-decoration: none;
          border-bottom: 1px solid currentColor;
        }

